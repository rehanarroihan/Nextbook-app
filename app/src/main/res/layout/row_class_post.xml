<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="7dp"
        android:paddingLeft="10dp"
        android:paddingTop="7dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewPostUser"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="9dp"
            android:src="@drawable/face" />

        <TextView
            android:id="@+id/textViewPostUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageViewPostUser"
            android:text="Rehan Arroihan"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textViewCucuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewPostUser"
            android:layout_alignBottom="@+id/textViewPostUser"
            android:layout_toEndOf="@+id/textViewPostUser"
            android:text="  >  "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPostLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewCucuk"
            android:layout_alignBottom="@+id/textViewCucuk"
            android:layout_toEndOf="@+id/textViewCucuk"
            android:text="Matematika"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPostCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPostUser"
            android:layout_toEndOf="@+id/imageViewPostUser"
            android:text="19 Februari 2018, 15.00" />

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewPostUser"
            android:layout_marginTop="4dp"
            android:text="Lorem ipsum lalalalal Lorem ipsum lalalalal Lorem ipsum lalalalal Lorem ipsum lalalalal Lorem ipsum lalalalal Lorem ipsum lalalalal " />

        <TextView
            android:id="@+id/textViewKomen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewContent"
            android:layout_marginTop="15dp"
            android:text="9 Komentar"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
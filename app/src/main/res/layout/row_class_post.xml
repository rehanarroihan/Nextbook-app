<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingTop="7dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewPostUser"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/face" />

        <TextView
            android:id="@+id/textViewPostUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/imageViewPostUser"
            android:text="--,--"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textViewCucuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewPostUser"
            android:layout_alignBottom="@+id/textViewPostUser"
            android:layout_toEndOf="@+id/textViewPostUser"
            android:text="  >  "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPostLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewCucuk"
            android:layout_alignBottom="@+id/textViewCucuk"
            android:layout_toEndOf="@+id/textViewCucuk"
            android:text="--,--"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPostCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPostUser"
            android:layout_toEndOf="@+id/imageViewPostUser"
            android:text="19 Februari 2018, 15.00"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewPostUser"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:text="Lorem ipsum laLorem ipsum lalalalal " />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewContent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bggrey"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iconFile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_attachment_black_24dp"
                android:tint="#BDBDBD" />

            <ImageView
                android:id="@+id/iconPhoto"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/textViewKomen"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/iconFile"
                android:src="@drawable/ic_photo_black_24dp"
                android:tint="#BDBDBD" />

            <TextView
                android:id="@+id/textViewKomen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="9 Komentar"
                android:textColor="#757575"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>